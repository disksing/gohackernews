<section class="narrow">
<form method="post">
    <h1>注册开启投票和提交功能</h1>
    <p>已注册？点击<a href="/users/login">这里</a>登入。</p>
    {{ field "用户名" "name" .user.Name }}
    {{ field "邮箱 (可选)" "email" .user.Email }}
    {{ field "密码" "password" "" "password" "type=password" }}
  
    <div class="field">
      <input type="submit" class="button " value="注册">
    </div>
    
    <input name="authenticity_token" type="hidden" value="{{.authenticity_token}}">
</form>
</section>